<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jameson.crytpocurrencyapplication.InputFrag">

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="115dp"
        android:layout_marginTop="31dp"
        android:text="Buy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spCurrency"
        android:textColor="@color/buttonText"
        android:background="@color/buttonColor"/>

    <TextView
        android:id="@+id/txtMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money (USD):"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtInput"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/txtCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Crypto Currency:"
        app:layout_constraintTop_toBottomOf="@+id/txtMoney"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spCurrency"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/txtInput"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="213dp" />

    <Spinner
        android:id="@+id/spCurrency"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInput"
        android:entries="@array/currency_types"/>
</android.support.constraint.ConstraintLayout>
