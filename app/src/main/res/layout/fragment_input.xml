<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jameson.crytpocurrencyapplication.InputFrag">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/spCurrency"
        android:layout_marginRight="148dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money (USD):"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="63dp" />

    <TextView
        android:id="@+id/txtCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="Crypto Currency:"
        app:layout_constraintTop_toBottomOf="@+id/txtMoney"
        android:layout_marginLeft="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="63dp" />

    <EditText
        android:id="@+id/txtInput"
        android:layout_width="176dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="48dp" />

    <Spinner
        android:id="@+id/spCurrency"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInput"
        android:entries="@array/currency_types"/>
</android.support.constraint.ConstraintLayout>
