<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jameson.crytpocurrencyapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="377dp"
        android:layout_height="165dp"
        app:srcCompat="@drawable/crypto_currency_wallet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        android:scaleType="centerCrop"
        android:contentDescription="Image of Crypto Currency"/>

    <Button
        android:id="@+id/btnTopTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:layout_marginTop="30dp"
        android:text="Get Top 10 Crypto Currencies"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:onClick="getTopTen"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btnBitcoin"
        android:layout_width="112dp"
        android:layout_height="54dp"
        android:text="Bitcon Info"
        android:onClick="getBitcoinInfo"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTopTen"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnEthereum"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.787" />

    <Button
        android:id="@+id/btnEthereum"
        android:layout_width="106dp"
        android:layout_height="56dp"
        android:text="Ethereum Info"
        android:onClick="getEthereumInfo"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTopTen"
        android:layout_marginRight="54dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Crypto Currency"
        android:onClick="buyCryptoCurrency"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBitcoin"
        android:layout_marginRight="89dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
